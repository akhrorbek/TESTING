<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="../assets/css/main.css"/>
    <noscript>
        <link rel="stylesheet" href="../assets/sass/noscript.scss" />
    </noscript>
    <title>Banks</title>
</head>

<body>


    <!-- Sidebar -->


	<section id="sidebar">
		<div class="inner">
			<nav>
				<ul>
					<li><a href="/admin/companies">Company</a></li>
					<li><a href="/admin/complexes">Complexes</a></li>
					<li><a href="/admin/rooms">Rooms</a></li>
					<li><a href="/admin/banks">Banks</a></li>
				</ul>
			</nav>
		</div>
	</section>

    <div id="wrapper">
        <header class="headerWrapper">
			<h1>Banks</h1>
		</header>
		<section id="three" class="wrapper style1 fade-up">
			<div class="inner">
				<h2>Add Banks</h2>
				<div class="split style1">
					<section>
						<form method="post" action="/admin/banks" enctype="application/x-www-form-urlencoded">
							<div class="fields">
								<div class="field half">
									<label for="name">Bank name</label>
									<input type="text" name="bank_name" id=bank_name" placeholder="Bank name" required />
								</div>
								<div class="field half">
									<label for="name">Bank loan</label>
									<input type="text" name="bank_loan" id="bank_loan" placeholder="Enter money" required />
								</div>
								<div class="field half">
                                    <label for="room_size">Bank loan year</label>
                                    <select name="bank_loan_year" id="bank_loan_year">
                                        <option disabled selected>Choose years</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="10">10</option>
                                        <option value="15">15</option>
                                        <option value="20">20</option>
                                    </select>
                                </div>
								<div class="field half">
                                    <label for="room_size">Bank loan percent</label>
                                    <select name="bank_loan_percent" id="bank_loan_percent">
                                        <option disabled selected>Choose percent</option>
                                        <option value="8">8</option>
                                        <option value="10">10</option>
                                        <option value="15">15</option>
                                    </select>
                                </div>
								<div class="field half">
									<label for="photo">Bank photo</label>
									<input type="text"  name="bank_photo" id="bank_photo" placeholder="Bank photo link" required />
								</div>
							</div>
							<ul class="actions">
								<button type="submit" class="button submit">add</button>
							</ul>
						</form>
					</section>
                    <!--Added companies-->
                    <section>
                        <h3 class="courseTitle text-center">Exist Banks</h3>
                        <ul class="courseList d-flex flex-wrap justify-content-around pt-5">
                            <% allBanks.map(e=> {%>
                                <li class="card bg-primary p-5 rounded-5 mt-5 d-flex flex-column align-items-center">
                                    <h5><%=e.bank_name %></h5>
									<h5>Loan: <%=e.bank_loan %> UZS</h5>
									<h5>Loan year: <%=e.bank_loan_year %> years</h5>
									<h5>Loan percent: <%=e.bank_loan_percent %> %</h5>
                                    <img class="mt-3 mb-3" src="<%=e.bank_photo %>" width="120" height="130">
									<button id="<%=e.bank_id %>" onclick="deleteHandleBank(event)" class="button btn-danger">Delete</button>
                                </li>
                            <%}); %>
                        </ul>
                    </section>
				</div>
			</div>
		</section>
    </div>


	<script src="../assets/app.js"></script>

</body>

</html>