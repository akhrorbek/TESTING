<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="../assets/css/main.css"/>
    <noscript>
        <link rel="stylesheet" href="../assets/sass/noscript.scss" />
    </noscript>
    <title>Company</title>
</head>

<body>


    <!-- Sidebar -->


	<section id="sidebar">
		<div class="inner">
			<nav>
				<ul>
					<li><a href="/admin/companies">Company</a></li>
					<li><a href="/admin/complexes">Complexes</a></li>
					<li><a href="/admin/rooms">Rooms</a></li>
					<li><a href="/admin/banks">Banks</a></li>
				</ul>
			</nav>
		</div>
	</section>

    <div id="wrapper">
        <header class="headerWrapper">
			<h1>Companies</h1>
		</header>
		<section id="three" class="wrapper style1 fade-up">
			<div class="inner">
				<h2>Create Companies</h2>
				<div class="split style1">
					<section>
						<form method="post" action="/admin/companies" enctype="application/x-www-form-urlencoded">
							<div class="fields">
								<div class="field half">
									<label for="name">Company name</label>
									<input type="text" name="comp_name" id="comp_name" placeholder="Company name" required />
								</div>
								<div class="field half">
									<label for="photo">Company photo link</label>
									<input type="text"  name="comp_photo_link" id="comp_photo_link" placeholder="Company photo link" required />
								</div>
							</div>
							<ul class="actions">
								<button type="submit" class="button submit">add</button>
							</ul>
						</form>
					</section>
                    <!--Added companies-->
                    <section>
                        <h3 class="courseTitle text-center">Exist Companies</h3>
                        <ul class="courseList d-flex flex-wrap justify-content-around pt-5">
                            <% allCompanies.map(e=> {%>
                                <li class="card bg-primary p-5 rounded-5 mt-5 d-flex flex-column align-items-center">
                                    <h5><%=e.comp_name %></h5>
                                    <img class="mt-3 mb-3" src="<%=e.comp_photo_link %>" width="180" height="120">
									<button id="<%=e.comp_id %>" onclick="deleteHandleCompany(event)" class="button btn-danger">Delete</button>
                                </li>
                            <%}); %>
                        </ul>
                    </section>
				</div>
			</div>
		</section>
    </div>


	<script src="../assets/app.js"></script>

</body>

</html>